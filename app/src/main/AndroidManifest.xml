<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.contentproviderexample">

    <permission
        android:name="my.content.provider.read.write.permission"
        android:label="ReadCustomUri"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ContentProviderExample">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="UsersProvider"
            android:authorities="com.example.readfromcontentprovider.Birthday"
            android:exported="true"
            android:grantUriPermissions="true"
            android:writePermission="my.content.provider.read.write.permission"
            android:readPermission="my.content.provider.read.write.permission" />
    </application>
</manifest>